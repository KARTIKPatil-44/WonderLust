                                        <a class="action" href="/logout"><i
                                                class="fa-solid fa-arrow-right-from-bracket"></i><span>Log
                                                out</span></a>
                                        <% } %>
                                            <a class="action" href="/listings/new"><i
                                                    class="fa-solid fa-circle-plus"></i><span>Airbnb your
                                                    home</span></a>
                        </div>

                        <!-- Desktop: original list -->
                        <% if(!(typeof currentUser !=='undefined' && currentUser)) { %>
                            <li class="d-none d-lg-block"><a class="dropdown-item" href="/signup">
                                    <i class="fa-solid fa-user-plus"></i>&nbsp; &nbsp;<b>Sign up</b>
                                </a></li>
                            <li class="d-none d-lg-block"><a class="dropdown-item" href="/login">
                                    <i class="fa-solid fa-user-check"></i>&nbsp; &nbsp;<b>Log in</b>
                                </a></li>
                            <% } %>
                                <% if(typeof currentUser !=='undefined' && currentUser) { %>
                                    <li class="d-none d-lg-block">
                                        <h6 class="dropdown-header">
                                            <i class="fa-solid fa-user"></i>&nbsp; &nbsp;<%= currentUser.username %>
                                        </h6>
                                    </li>
                                    <li class="d-none d-lg-block"><a class="dropdown-item" href="/logout">
                                            <i class="fa-solid fa-arrow-right-from-bracket"></i>&nbsp; &nbsp;<b>Log
                                                out</b>
                                        </a></li>
                                    <% } %>
                                        <li class="d-none d-lg-block">
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li class="d-none d-lg-block"><a class="dropdown-item" href="/listings/new">
                                                <i class="fa-solid fa-circle-plus"></i>&nbsp; &nbsp;<strong>Airbnb your
                                                    home</strong>
                                            </a></li>
                    </ul>
                </li>

                <!-- Responsive Registration (visible on smaller screens) -->
                <div id="responsive-registration" class="d-none">
                    <% if(!(typeof currentUser !=='undefined' && currentUser)) { %>
                        <a class="nav-link" href="/signup">
                            <i class="fa-solid fa-user-plus"></i>&nbsp;&nbsp;<b>Sign up</b>
                        </a>
                        <a class="nav-link" href="/login">
                            <i class="fa-solid fa-user-check"></i>&nbsp;&nbsp;<b>Log in</b>
                        </a>
                        <% } %>

                            <% if(typeof currentUser !=='undefined' && currentUser) { %>
                                <h6 class="mt-1 nav-link"><b>
                                        <i class="fa-solid fa-user"></i>&nbsp; &nbsp;<%= currentUser.username %>
                                    </b></h6>
                                <a class="nav-link" href="/logout">
                                    <i class="fa-solid fa-arrow-right-from-bracket"></i>&nbsp;<b>Log out</b>
                                </a>
                                <% } %>

                                    <a class="nav-link" href="/listings/new">
                                        <i class="fa-solid fa-circle-plus"></i>&nbsp; &nbsp;<strong>Airbnb your
                                            home</strong>
                                    </a>
                </div>
            </ul>
        </div>
    </div>
</nav>