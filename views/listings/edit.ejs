<% layout("layouts/boilerplate.ejs")-%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Listings</h3>
            <form method="POST" action="/listings/<%=listing._id %>?_method=PUT" novalidate class="needs-validation"
                enctype="multipart/form-data" id="editForm">

                <div>
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Please enter a valid Title</div>
                </div>

                <div class="mt-4 mb-3">
                    <p class="text-muted mb-0">
                        <strong>Owned by:</strong> <i class="text-primary">
                            <%= listing.owner ? listing.owner.username : "Unknown Owner" %>
                        </i>
                    </p>
                </div>

                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="listing[description]"
                        required><%= listing.description  %></textarea>
                    <div class="valid-feedback">Description looks good!</div>
                    <div class="invalid-feedback">Please enter a valid Description</div>
                </div>
                <div class="mt-2">
                    <div class="preview-wrap">
                        <img src="<%= orignalImageUrl %>" alt="image preview" class="preview-thumb">
                        <span class="preview-caption">Old image</span>
                    </div>
                </div>
                <div>
                    <label for="image" class="form-label">Upload new Image</label>
                    <input type="file" name="listing[image]" class="form-control">
                </div>
                <div>
                    <label for="category" class="form-label">Choose Category</label>
                    <div class="category-choose">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="radio" name="listing[category]"
                                    value="Rooms" required <%=listing.category==='Rooms' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="rooms">
                                    <i class="fa-solid fa-bed me-2"></i> Rooms
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="iconic-cities" name="listing[category]"
                                    value="Iconic-Cities" required <%=listing.category==='Iconic-Cities' ? 'checked'
                                    : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="iconic-cities">
                                    <i class="fa-solid fa-mountain-city me-2"></i> Iconic Cities
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="mountains" name="listing[category]"
                                    value="Mountains" required <%=listing.category==='Mountains' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="mountains">
                                    <i class="fa-solid fa-mountain-sun me-2"></i> Mountains
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="castles" name="listing[category]"
                                    value="Castles" required <%=listing.category==='Castles' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="castles">
                                    <i class="fa-brands fa-fort-awesome me-2"></i> Castles
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="boat" name="listing[category]"
                                    value="Boat" required <%=listing.category==='Boat' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="boat">
                                    <i class="fa-solid fa-sailboat me-2"></i> Boat
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="ski-in-out" name="listing[category]"
                                    value="Ski-in/out" required <%=listing.category==='Ski-in-out' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="ski-in-out">
                                    <i class="fa-solid fa-person-snowboarding me-2"></i> Ski-in/out
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="apartment" name="listing[category]"
                                    value="Apartment" required <%=listing.category==='Apartment' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="apartment">
                                    <i class="fa-solid fa-building me-2"></i> Apartment
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="new" name="listing[category]"
                                    value="New" required <%=listing.category==='New' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="new">
                                    <i class="fa-solid fa-key me-2"></i> New
                                </label>
                            </div>

                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="woodlands" name="listing[category]"
                                    value="Woodlands" required <%=listing.category==='Woodlands' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="woodlands">
                                    <i class="fa-solid fa-tree-city me-2"></i> Woodlands
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="lake" name="listing[category]"
                                    value="Lake" required <%=listing.category==='Lake' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="lake">
                                    <i class="fa-solid fa-water me-2"></i> Lake
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="amazing-pools" name="listing[category]"
                                    value="Amazing-Pools" required <%=listing.category==='Amazing-Pools' ? 'checked'
                                    : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="amazing-pools">
                                    <i class="fa-solid fa-person-swimming me-2"></i> Amazing Pools
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="cabins" name="listing[category]"
                                    value="Cabins" required <%=listing.category==='Cabins' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="cabins">
                                    <i class="fa-solid fa-house me-2"></i> Cabins
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="camping" name="listing[category]"
                                    value="Camping" required <%=listing.category==='Camping' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="camping">
                                    <i class="fa-solid fa-campground me-2"></i> Camping
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="farm" name="listing[category]"
                                    value="Farm" required <%=listing.category==='Farm' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="farm">
                                    <i class="fa-solid fa-cow me-2"></i> Farm
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="arctic" name="listing[category]"
                                    value="Arctic" required <%=listing.category==='Arctic' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="arctic">
                                    <i class="fa-solid fa-snowflake me-2"></i> Arctic
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="beach" name="listing[category]"
                                    value="Beach" required <%=listing.category==='Beach' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="beach">
                                    <i class="fa-solid fa-umbrella-beach me-2"></i> Beach
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="countryside" name="listing[category]"
                                    value="Countryside" required <%=listing.category==='Countryside' ? 'checked' : ''
                                    %>>
                                <label class="form-check-label d-flex align-items-center" for="countryside">
                                    <i class="fa-solid fa-house-chimney-window me-2"></i> Countryside
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="bed-and-breakfasts"
                                    name="listing[category]" value="Bed-and-Breakfasts" required
                                    <%=listing.category==='Bed-and-Breakfasts' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="bed-and-breakfasts">
                                    <i class="fa-solid fa-mug-hot me-2"></i> Bed & Breakfasts
                                </label>
                            </div>

                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="campsite" name="listing[category]"
                                    value="Campsite" required <%=listing.category==='Campsite' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="campsite">
                                    <i class="fa-solid fa-tents me-2"></i> Campsite
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" id="historical-homes"
                                    name="listing[category]" value="Historical-Homes" required
                                    <%=listing.category==='Historical-Homes' ? 'checked' : '' %>>
                                <label class="form-check-label d-flex align-items-center" for="historical-homes">
                                    <i class="fa-solid fa-landmark me-2"></i> Historical Homes
                                </label>
                            </div>

                        </div>
                    </div>
                    <div class="invalid-feedback">Choose Category</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control"
                            required>
                        <div class="valid-feedback">Price looks good!</div>
                        <div class="invalid-feedback">Please enter a valid Price</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control"
                            required>
                        <div class="valid-feedback">Location looks good!</div>
                        <div class="invalid-feedback">Please enter a valid Location</div>

                    </div>
                </div>
                <div>
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control"
                        required>
                    <div class="valid-feedback">Country looks good!</div>
                    <div class="invalid-feedback">Please enter a valid Country </div>
                </div>
                <button class="btn btn-dark edit-btn mt-3 ">Edit</button>
            </form>
        </div>
    </div>